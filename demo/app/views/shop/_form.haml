%fieldset.control-group
  =f.text_field :name, :class => 'form-control input-small input-with-feedback center-input', :autofocus => true, :placeholder => '店面名称', :value => @shop.name
  %p 

%fieldset.control-group
  .controls
    =f.text_field :address, :class => 'form-control input-large input-with-feedback center-input', :placeholder => '地址', :value => @shop.address
    %p
    =f.text_field :address_code, :class => 'form-control input-large input-with-feedback center-input', :placeholder => '经纬度', :value => @shop.lon ? @shop.lon.to_s + ',' + @shop.lat.to_s : ""
    %p
      = link_to "使用这个链接点击，选好点后点击右上角复制到这个框即可", url("http://api.map.baidu.com/lbsapi/getpoint/index.html"), :target => "_blank"

%fieldset.control-group
  .controls
    =f.text_field :shop_tel, :class => 'form-control input-large input-with-feedback center-input', :placeholder => '电话', :value => @shop.shop_tel
    %p 

  .controls
    =f.select :category, :class => "col-xs-2 input-large input-with-feedback ", :placeholder => 'dianhua',:value => @shop.category,
     :options => ["meishi", "huoguo"]
    %span.col-xs-2
    =file_field_tag "filename", :class => "col-xs-8 input-large input-with-feedback"
    %p 
    &nbsp

  .controls
    =f.text_area :profile, :class => 'form-control input-large input-with-feedback center-input', :placeholder => '简介'
    %p 

.controls
  %span.col-xs-7
  =f.submit "submit", :class => 'btn btn-primary'

:css
  .center-input{
    width: 70%
  }
