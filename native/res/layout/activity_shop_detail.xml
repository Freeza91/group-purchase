<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/blue" >
        <Button 
            android:id="@+id/collection"
            android:background="@drawable/ic_collection"
            android:layout_width="120px"
            android:layout_height="90px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       android:layout_weight="10"
       android:orientation="vertical"
       >
       <ImageView 
           android:id="@+id/shop_detail_avatar"
           android:layout_width="match_parent"
           android:layout_height="300px"
           android:src="@drawable/ic_launcher"
           />
      	<LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView 
	           android:id="@+id/shop_detail_name"
	           android:layout_width="wrap_content"
	           android:layout_height="fill_parent"
	           android:text="店名"
           />
           	<TextView 
	           android:id="@+id/shop_detail_address"
	           android:layout_width="wrap_content"
	           android:layout_height="fill_parent"
	           android:text="地址"
           	/>

       </LinearLayout>
       
       <TextView 
           android:id="@+id/shop_detail_tel"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="电话"
           />
       	<TextView 
           android:id="@+id/shop_detail_profile"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="简介"
           />
       	<LinearLayout 
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    android:orientation="horizontal">
			<TextView 
	           android:id="@+id/shop_detail_category"
	           android:layout_width="wrap_content"
	           android:layout_height="fill_parent"
	           android:text="类别"
	           />
			<TextView 
	           android:id="@+id/shop_detail_rating"
	           android:layout_width="wrap_content"
	           android:layout_height="fill_parent"
	           android:text="评分"
	           />
		</LinearLayout>
   </LinearLayout>
   
   <Button 
       android:id="@+id/nav"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:text="导航"/>

</LinearLayout>